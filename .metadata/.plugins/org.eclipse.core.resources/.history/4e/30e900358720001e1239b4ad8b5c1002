CREATE TABLE TBL_USER(
	user_id NUMBER CONSTRAINT pk_user PRIMARY KEY,
	USER_IDENTIFIcation varchar2(500) UNIQUE NOT NULL,
	USER_password varchar2(500) NOT NULL,
	USER_name varchar2(500) NOT NULL,
	USER_phone varchar2(500) NOT NULL,
	USER_nickname varchar2(500),
	USER_email varchar2(500) NOT NULL ,
	USER_ADDRESS varchar2(500) ,
	USER_BIRTH DATE ,
	USER_RECOMMENDER_ID VARCHAR2(500)
);

SELECT  * FROM TBL_USER;

DROP TABLE tbl_user;

--사용자 정보를 저장하는 유저테이블 생성하기
CREATE  SEQUENCE seq_user;

--TBL_USER1
--사용자 번호 USER1_number
--사용자아이디 USER1_ID
--패스워드 USER1_PASSWORD
-- 이름 USER1_NAME
-- 나이 USER1_AGE
-- 성별 USER1_GENDER 
-- 생일 USER1_BIRTH

CREATE TABLE TBL_USER1(
USER1_NUMBER NUMBER,
USER1_ID VARCHAR(1000),
USER1_PASSWORD VARCHAR(1000),
USER1_NAME VARCHAR(1000),
USER1_AGE NUMBER,
USER1_GENDER CHAR(1) DEFAULT 'N',
USER1_BIRTH DATE,
CONSTRAINT PK_USER1 PRIMARY KEY(USER1_NUMBER)
);

SELECT * FROM TBL_USER1;


